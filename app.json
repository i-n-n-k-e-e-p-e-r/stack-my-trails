{
  "expo": {
    "name": "Stack My Trails",
    "slug": "stack-my-trails",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icons/icon.png",
    "scheme": "stackmytrails",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "dev.tuftbird.stack-my-trails",
      "icon": {
        "dark": "./assets/images/icons/ios-icon-dark.png",
        "light": "./assets/images/icons/ios-icon-light.png",
        "tinted": "./assets/images/icons/ios-icon-tinted.png"
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#F5F6F7",
        "foregroundImage": "./assets/images/icons/adaptive-icon-foreground.png",
        "monochromeImage": "./assets/images/icons/adaptive-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/icons/splash-icon-light.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#F5F6F7",
          "dark": {
            "image": "./assets/images/icons/splash-icon-dark.png",
            "backgroundColor": "#2D3238"
          }
        }
      ],
      [
        "@kingstinct/react-native-healthkit",
        {
          "NSHealthShareUsageDescription": "Stack My Trails reads your workout routes to visualize them on the map",
          "NSHealthUpdateUsageDescription": false,
          "background": false
        }
      ],
      "expo-sqlite",
      "@react-native-community/datetimepicker",
      [
        "expo-media-library",
        {
          "photosPermission": "Allow Stack My Trails to save poster images to your photo library",
          "savePhotosPermission": "Allow Stack My Trails to save poster images to your photo library"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    }
  }
}
